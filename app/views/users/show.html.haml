%h1 
	= image_tag @user.avatar.url(:thumb)
	Inspiration by
	= @user.name
	- if (current_user != @user) || (current_user.following?(@user))
		= link_to "Follow", follow_user_path(@user)
	- else
		= link_to "Unfollow", unfollow_user_path(@user)

#posts
	- @user_posts.each do |post|
		.post
			.post_image
				= link_to (image_tag post.image.url(:small)), post
			.post_content
				.title
					%h2= link_to post.title, post
				.data.clearfix
					%p.username
						Shared in
						= post.category.name
					%p.buttons
						%span
							%i.fa.fa-comments-o
							= post.comments.count
						%span
							%i.fa.fa-thumbs-o-up
							= post.get_likes.size